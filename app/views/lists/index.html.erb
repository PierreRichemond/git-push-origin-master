<div class="container mt-3">
  <h1>Select your movie-style</h1>
  <div class="row">
    <% @lists.each do|list| %>
      <div class="card col-3 card-size m-3" style="width: 18rem;">
        <%= link_to list_path(list), class: 'card-link' do %><% end %>
        <div class="card-body perso-card" style="background-image: url(<%= list.photo.attached? ?
      cl_image_path(list.photo.key) : image_path('http://placehold.jp/400x300.png') %>)">
          <%= link_to list.name, list_path(list)%>
        </div>
      </div>
    <% end %>
  </div>
</div>
