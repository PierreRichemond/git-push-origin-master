<div class="container">
  <h1>Your selected list</h1>
  <h2 class=' pt-2'><%= @list.name.capitalize %></h2>
  <div>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-show">
        <div class="d-flex justify-content-center">
          <%= image_tag bookmark.movie.poster_url, width: '200px', class: 'show-image ' %>
        </div>
        <div class='p-2 pb-5'>
          <h2 class='mb-2'><%= bookmark.movie.title %></h2>
          <p ><%= bookmark.movie.overview %></p>
          <%= link_to "Delete this bookmark", bookmark_path(bookmark), method: :delete, class: 'btn btn-danger absolute1', data: { confirm: "delete #{bookmark.movie.title}?"} %>
          <p>Comments:</p>
          <p><%= bookmark.comment.capitalize %></p>
        </div>
        <%# <li><%= link_to 'Add a rating to this movie list', </li> %>
      </div>
    <% end %>
  </div >
  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: 'btn-lg btn-info margin-bot' %>
</div>
